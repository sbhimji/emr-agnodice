<head>
  <title>Home</title>
  <link rel = "stylesheet" type = "text/css" href = "../style/home.css" />
  <link rel="icon" type="png" href="img/logo4.png"/>
</head>
<body style = "background-color:rgb(242, 246, 216)">
  <img src="../img/logo2.png" alt="Logo" width="120" height="90" class = "guest">
  <h3 class = "topright"><a href = "/">Logout</a></h3>
  <div>
    
    <div class = "search">
      <form action="/searchPatient" method="post">
      
        <h2>Search patient</h2>
            <label for = "fname">First Name</label>
            <input type="text" id = "fname" name = "fname">
            <label for = "lname">Last Name</label>
            <input type="text" id = "lname" name = "lname">
    
            <label for = "birthday">Birthday</label>
            <input id = "birthday" name = "birthday" type = "date">
      
            <label for = "mrn">MRN</label>
            <input type="text" id = "mrn" name = "mrn">
        
            <button type = "submit" id = "button">Search</button>
            <h3><a href = "/home?found=true">Clear Results</a></h3>
    </form>  
    </div>
           
  </div>
  <h2 class = "linkz"><a href = "/newPatient">New Patient</a></h2> 
  <div class = "scrollable">
    <h2 class = "recLabel">Patient Records</h2>
      <table class = "center" id = "queryTable" name = "openingtable" style = "width:75%">
        <tr>
          <th>MRN</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Birthday</th>
        </tr>
        <% patients.forEach(function(patient) { %> 
          <tr>
            <td><a href="/patient-record?patient_id=<%= patient.patient_id %>"><%= patient.patient_id %></a></td>
            <td><%= patient.fname %></td>
            <td><%= patient.lname %></td>
            <td><%= patient.birthday %></td>
          </tr>
        <% }) %>
          
          </table>
  </div>
</body>
